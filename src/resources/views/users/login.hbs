<div class="mt-4">
    <h2>Đăng nhập</h2>
    <form id="login-form" onsubmit="return validateForm()" method="post" action="/users/getin">
        <div class="form-group">
            <label for="username">Tên đăng nhập</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Tên đăng nhập">
            <div id="username-error" style="display: none; color: red;">Vui lòng nhập tài khoản</div>
        </div>
        <div class="form-group">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu">
            <div id="password-error" style="display: none; color: red;">Vui lòng nhập mật khẩu</div>
        </div>
        <button type="submit" class="btn btn-primary login-btn">Đăng nhập</button>
    </form>
</div>

<script>
    function validateForm() {
        var username = document.forms["login-form"]["username"].value;
        var password = document.forms["login-form"]["password"].value;
        if (username == "" || password == "") {
            if (username == "") {
                $('#username-error').show();
                if (password) $('#password-error').hide(); else $('#password-error').show();
                return false;
            } else $('#username-error').hide();
            if (password == "") {
                $('#password-error').show();
                return false;
            } else $('#password-error').hide();
        } else $('#username-error').hide();
    } 
</script>