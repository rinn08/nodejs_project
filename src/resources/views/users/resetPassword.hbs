<div class="container">
    <h1>Khôi phục mật khẩu</h1>
    <form id="reset-password-form" action="/users/resetpassword" method="post">
        <div class="form-group">
            <label for="password">Mật khẩu mới</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu mới">
            <div id="password-error" style="display: none; color: red;">Vui lòng nhập mật khẩu mới</div>
        </div>

        <div class="form-group">
            <label for="confirmPassword">Xác nhận mật khẩu mới</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                placeholder="Nhập lại mật khẩu mới">
            <div id="confirmPassword-error" style="display: none; color: red;">Vui lòng xác nhận mật khẩu mới</div>
        </div>

        <button type="submit" class="btn btn-primary">Khôi phục mật khẩu</button>
    </form>
</div>