<div class="mt-4 ml-4 mr-4 mb-4">
    <div class="container">
        <div class="row">
            {{#each courses}}
            <div class="col-sm-4 col-lg-4">
                <div class="card card-courses-item">
                    <a href="/courses/{{this.slug}}">
                        <img src="{{this.image}}" class="card-img-top" alt="Hình ảnh khóa học">
                    </a>
                    <div class="card-body">
                        <a href="/courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Mua khóa học</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>